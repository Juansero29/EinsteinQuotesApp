<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="EinsteinQuotesApp.StackLayoutExerciseOne"
    BackgroundColor="#127ac7">
	<ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            Spacing="20">

                <Label 
                    HorizontalOptions="Center"
                    TextColor="White"
                    FontSize="30" 
                    FontAttributes="Bold"
                    Text="Welcome to Xamarin"/>

                <Label
                    HorizontalOptions="Center"
                    TextColor="White"
                    FontSize="18"
                    Text="Cross-platform apps made easy"/>

                <Button
                    TextColor="White"
                    BackgroundColor="#1dabf0"
                    Text="Login"/>

            <Button
                    TextColor="White"
                    BackgroundColor="#1dabf0"
                    Text="Register"/>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
